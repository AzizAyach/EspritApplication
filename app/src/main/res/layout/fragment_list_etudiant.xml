<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="esprit.org.espritappliaction.Fragment.ListEtudiantFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.CardView
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card_view:cardCornerRadius="7dp"
            card_view:cardElevation="10dp"
            android:layout_marginBottom="0dp"
            style="@style/Material_Card_View"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/carbon_white_70"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="40"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="ID"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:textColor="@color/material_red_600"
                    />
                <TextView
                    android:layout_weight="30"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Nom"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:textColor="@color/material_red_600"
                    />
                <TextView
                    android:layout_weight="30"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Prenom"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:textColor="@color/material_red_600"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycleetudiant">

        </ListView>

    </LinearLayout>

</FrameLayout>
