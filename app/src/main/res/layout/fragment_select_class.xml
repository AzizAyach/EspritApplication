<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"

    tools:context="com.esprit.smartesprit.Fragment.SelectClassFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        android:background="@android:color/holo_red_dark"

        style="@style/Toolbar"
        android:layout_height="90px"
        >

       <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stack"
            android:layout_marginLeft="10dp"
            android:id="@+id/menu"
            />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Absence Statistique"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Red"
        android:id="@+id/semLayout"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/Black"
        android:id="@+id/semestreSpinner"

       />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/semLayout"

        android:layout_height="wrap_content">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/Red"
        android:dividerHeight="2dp"

        android:id="@+id/listClass">

    </ListView>
    </LinearLayout>
</RelativeLayout>
