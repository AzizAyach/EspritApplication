<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Fragment_Attr"
    style="@style/WizardPageContainer"
    android:orientation="vertical">

<TextView style="@style/WizardPageTitle" />

<ScrollView android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_labelColor="@android:color/holo_red_dark">
        <EditText
            android:id="@+id/titreloge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titre"
            android:inputType="textCapWords"

            android:textColor="@color/material_red_800"
            android:textColorHint="@color/material_red_300"
            android:textSize="18sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_labelColor="@android:color/holo_red_dark">


        <EditText
            android:id="@+id/nbPersonne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Personne"
            android:inputType="textCapWords"

            android:textColor="@color/material_red_800"
            android:textColorHint="@color/material_red_300"
            android:textSize="18sp" />


    </com.github.florent37.materialtextfield.MaterialTextField>


    <com.github.florent37.materialtextfield.MaterialTextField

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_labelColor="@android:color/holo_red_dark">


    <EditText
        android:id="@+id/chambre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chambre"
        android:inputType="textCapWords"

        android:textColor="@color/material_red_800"
        android:textColorHint="@color/material_red_300"
        android:textSize="18sp" />


    </com.github.florent37.materialtextfield.MaterialTextField>

    <com.github.florent37.materialtextfield.MaterialTextField

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_labelColor="@android:color/holo_red_dark">


    <EditText
        android:id="@+id/nblit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Lit"
        android:inputType="textCapWords"

        android:textColor="@color/material_red_800"
        android:textColorHint="@color/material_red_300"
        android:textSize="18sp" />
    </com.github.florent37.materialtextfield.MaterialTextField>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_labelColor="@android:color/holo_red_dark">
    <EditText
        android:id="@+id/mailuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mail"
        android:inputType="textCapWords"

        android:textColor="@color/material_red_800"
        android:textColorHint="@color/material_red_300"
        android:textSize="18sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_labelColor="@android:color/holo_red_dark">
        <EditText
            android:id="@+id/City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:inputType="textCapWords"

            android:textColor="@color/material_red_800"
            android:textColorHint="@color/material_red_300"
            android:textSize="18sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>

    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_labelColor="@android:color/holo_red_dark">
        <EditText
            android:id="@+id/Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="textCapWords"

            android:textColor="@color/material_red_800"
            android:textColorHint="@color/material_red_300"
            android:textSize="18sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>
    <com.github.florent37.materialtextfield.MaterialTextField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_labelColor="@android:color/holo_red_dark">
        <EditText
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="textCapWords"

            android:textColor="@color/material_red_800"
            android:textColorHint="@color/material_red_300"
            android:textSize="18sp" />

    </com.github.florent37.materialtextfield.MaterialTextField>
</LinearLayout>
</ScrollView>
    </LinearLayout>
