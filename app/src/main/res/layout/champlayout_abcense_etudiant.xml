<LinearLayout
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cardViewetudiant"
        android:layout_marginTop="1dp"
        android:minHeight="30dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        card_view:cardCornerRadius="7dp"
        style="@style/Material_Card_View"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/carbon_white_70"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView android:id="@+id/idetudiant"
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:padding="3dp"
                android:textColor="@color/material_red_800"
                />
            <TextView android:id="@+id/etudinatname"
                android:layout_weight="40"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:padding="3dp"
                android:textColor="@color/material_red_800"
                />
            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/recycler_item_sb"
                style="@style/SwitchButtonMD"
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>